@model IEnumerable<SINPRO.Entity.DataModels.mUser>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-success"> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.password)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.statusDate)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.refreshToken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.refershTokenExpiration)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.inserted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.password)
        </td>*@
            <td>
                @if (item.statusDate>=DateTime.Now ||item.roleId==1)
                {
                    <font color="green">avtive</font>
                }
                else 
                {
                    <font color="red">no avtive</font>
                }
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.refreshToken)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.refershTokenExpiration)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.statusDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.inserted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mRole.resourceName)
            </td>
            <td>
                @if (item.roleId == 2)
                {
                <div class="btn-group">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.id">Edit</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.id">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id">Delete</a>
                </div>
                }
                else
                {
                    Write("THIS IS ADMIN!!!");
                }
            </td>
        </tr>
}
    </tbody>
</table>

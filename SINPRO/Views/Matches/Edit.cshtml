@model SINPRO.Entity.DataModels.mMatch

@{
    ViewData["Title"] = "Edit";
}

<h4>mMatch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="firstTimeName" class="control-label"></label>
                <input asp-for="firstTimeName" class="form-control" required />
                <span asp-validation-for="firstTimeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="firstTimePhoto" class="control-label"></label>
                <input asp-for="firstTimePhoto" class="form-control" type="file" />
                <span asp-validation-for="firstTimePhoto" class="text-danger"></span>
                <img src="@Model.firstTimePhoto" style="border-radius: 50%;" width="50px " height="50px">
            </div>
            <div class="form-group">
                <label asp-for="secondTimeName" class="control-label"></label>
                <input asp-for="secondTimeName" class="form-control" />
                <span asp-validation-for="secondTimeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="secondTimePhoto" class="control-label"></label>
                <input asp-for="secondTimePhoto" class="form-control" type="file" />
                <span asp-validation-for="secondTimePhoto" class="text-danger"></span>
                <img src="@Model.secondTimePhoto" style="border-radius: 50%;" width="50px " height="50px">

            </div>
            <div class="form-group">
                <label asp-for="textDescription" class="control-label"></label>
                <textarea asp-for="textDescription" class="form-control" required cols="100" rows="10"></textarea>
                <span asp-validation-for="textDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="matchTime" class="control-label"></label>
                <input asp-for="matchTime" class="form-control" required />
                <span asp-validation-for="matchTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="matchDate" class="control-label"></label>
                <input asp-for="matchDate" type="date" class="form-control" required />
                <span asp-validation-for="matchDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

